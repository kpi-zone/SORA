# ------------------------------
# Metabase Environment Variables
# ------------------------------


# The type of database Metabase will use to store its internal data
MB_DB_TYPE=postgres

# The name of the database Metabase will use
MB_DB_DBNAME=metabase

# The port on which the Postgres database is running
MB_DB_PORT=5432

# The username Metabase will use to connect to the database
MB_DB_USER=user

# The password Metabase will use to connect to the database
MB_DB_PASS=password

# The hostname or container name where the database is located
MB_DB_HOST=metabase-db

# ------------------------------
# Postgres Environment Variables
# ------------------------------

# The name of the database to be created inside the Postgres container
POSTGRES_DB=metabase

# The default user to be created for the Postgres instance
POSTGRES_USER=user
# The password for the default Postgres user
POSTGRES_PASSWORD=password
