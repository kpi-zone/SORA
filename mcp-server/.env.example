# ------------------------------
# MCP Server Configuration
# ------------------------------

# Logging level for the MCP server
# Common values: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# The URL endpoint of the Cube.js API the MCP server will query
# Typically points to the Cube.js REST API (v1)
MCP_ENDPOIN=http://cubejs:4000/cubejs-api/v1/

# Shared secret for authenticating with the Cube.js API
# Must match the CUBEJS_API_SECRET used in the Cube.js server
MCP_API_SECRET=dev-secret-abc1234567890xyzXYZ
